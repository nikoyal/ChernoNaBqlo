                                {
                                    if (this.User.IsInRole(GlobalConstants.AdministratorRoleName))
                                    {
                                        <a type="button" class="btn btn-primary" style="background-color:red" asp-controller="AdminNews" asp-action="DeleteById" asp-area="Administration" asp-route-id="@Model.Id">Изтрий</a>
                                        <a type="button" class="btn btn-primary" style="background-color:forestgreen" asp-controller="AdminNews" asp-action="GetEditById" asp-area="Administration" asp-route-id="@Model.Id">Редактирай</a>
                                    }
                                }
                                @*<button type="button" class="btn btn-primary" onclick="showAddCommentForm(0)"><i class="ion ion-md-create"></i>&nbsp;Коментирай</button>*@
                                <p style="color:red">fix share url when online</p>
