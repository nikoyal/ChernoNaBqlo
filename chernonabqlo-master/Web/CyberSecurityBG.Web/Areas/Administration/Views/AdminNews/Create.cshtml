@model CyberSecurityBG.Web.ViewModels.Newss.NewsCreateInputModel


<script src="/lib/tinymce/tinymce.min.js" type="text/javascript"></script>
<script type="text/javascript">
    tinymce.init({
        selector: "textarea",
        plugins: [
            "image paste table link code media"
        ]
    });
</script>


<form method="post" asp-action="Create">
    <div>
        <label asp-for="Title">Заглавие</label>
        <input asp-for="Title" style="color:black" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Url"></label>
        <input asp-for="Url" style="color:black" class="form-control" />
        <span asp-validation-for="Url" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Content">Съдържание</label>
        <textarea asp-for="Content" class="form-control"></textarea>
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Category">Категория</label>
        <select class="form-control" style="color:black" asp-for="Category">
            <option value="Politics">Политика</option>
            <option value="Conspiracy">Конспирация</option>
            <option value="Technology">Технологии</option>
            <option value="Business">Бизнес</option>
            <option value="Sport">Спорт</option>
            <option value="Other">Други</option>
        </select>
        <span asp-validation-for="Category" class="text-danger"></span>
    </div>
    <hr />
    <input type="submit" class="btn btn-primary" />
</form>